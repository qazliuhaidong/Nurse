<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="editText_style">
        <item name="android:textSize">28px</item>
        <item name="android:paddingTop">20px</item>
        <item name="android:paddingBottom">20px</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">#ffffff</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="login_editText_style">
        <item name="android:textSize">32px</item>
        <item name="android:paddingTop">30px</item>
        <item name="android:paddingBottom">30px</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">#ffffff</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="Text">
        <item name="android:textSize">32px</item>
        <item name="android:textColor">@color/colorText</item>
    </style>








</resources>
