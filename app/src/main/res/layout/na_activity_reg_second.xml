<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F5F5F5"
    android:orientation="vertical">

    <include layout="@layout/na_include_title"></include>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30px"
        android:text="请设置6-8位，以数字或字母组合的登录密码，不可用标点符号与特殊字符"
        android:textSize="24px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="160px"
            android:layout_height="wrap_content"
            android:layout_marginBottom="26px"
            android:layout_marginLeft="30px"
            android:layout_marginTop="28px"
            android:text="设置密码"
            android:textColor="#666"
            android:textSize="26px" />

        <EditText
            android:id="@+id/et_code1"
            style="@style/editText_style"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:hint="填写登录密码"
            android:paddingRight="30px"
            android:textColor="#666"
            android:textColorHint="@color/hint"
            android:textSize="26px" />
    </LinearLayout>

    <TextView
        android:layout_width="30px"
        android:layout_height="2px"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="160px"
            android:layout_height="wrap_content"
            android:layout_marginBottom="26px"
            android:layout_marginLeft="30px"
            android:layout_marginTop="28px"
            android:text="再次输入"
            android:textColor="#666"
            android:textSize="26px" />

        <EditText
            android:id="@+id/et_code2"
            style="@style/editText_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:hint="重新填写密码"
            android:paddingRight="30px"
            android:textColor="#666"
            android:inputType="textPassword"
            android:textColorHint="@color/hint"
            android:textSize="26px" />

    </LinearLayout>
    <TextView
        android:id="@+id/tvOk2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="50px"
        android:background="@drawable/bg_shape_ok"
        android:gravity="center"
        android:padding="26px"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="28px" />
    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.xnumberkeyboard.android.XNumberKeyboardView
            android:layout_alignParentBottom="true"
            android:id="@+id/keyboardView2"
            android:focusableInTouchMode="true"
            android:background="#b0b0b0"
            android:keyTextColor="#000000"
            android:focusable="true"
            android:shadowRadius="0"
            android:keyBackground="@drawable/selector_key_background"
            app:xnkv_deleteBackgroundColor="#d2d2d2"
            android:shadowColor="@android:color/transparent"
            app:xnkv_deleteDrawable="@mipmap/keyboard_backspace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>



</LinearLayout>
